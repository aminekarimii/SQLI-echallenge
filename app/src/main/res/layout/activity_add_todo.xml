<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activities.AddTodoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="21sp"
            android:layout_marginBottom="10dp"
            android:text="Write your Todo" />

        <EditText
            android:id="@+id/add_todo_edittext"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@drawable/rectangle_radius_shape"
            android:gravity="top"
            android:hint="Que pensez-vous?"
            android:inputType="text|textMultiLine"
            android:textColorHint="#9E9E9E" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_del_todo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:layout_margin="10dp"
            android:background="@drawable/cancel_rectangle_radius_button"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_add_todo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle_radius_button"
            android:text="Add"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>